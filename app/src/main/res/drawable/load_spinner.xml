<?xml version="1.0" encoding="utf-8"?>
<animated-rotate xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:innerRadius="15dp"
        android:shape="ring"
        android:thicknessRatio="5"
        android:useLevel="false">

        <size android:width="10dp"
            android:height="10dp"/>

        <gradient
            android:startColor="@color/blueberry_blue"
            android:centerColor="@color/ultramarine_blue"
            android:endColor="@color/pastel_blue"
            android:type="sweep"/>
    </shape>

</animated-rotate>