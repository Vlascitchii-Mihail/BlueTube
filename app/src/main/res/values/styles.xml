<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Toolbar Style-->
    <style name="BlueTubeToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="android:textSize">@dimen/text_large_18</item>
        <item name="navigationIcon">@drawable/ic_bluetube_small</item>
        <item name="title">@string/app_name</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/text_large_18</item>
        <item name="fontFamily">@font/roboto_bold_700</item>
    </style>


<!--    Style for Channel Preview-->
    <style name="CircularImage">
        <item name="cornerSize">50%</item>
    </style>



    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/roboto_bold_700</item>
        <item name="android:textSize">@dimen/text_medium_extra_16</item>
        <item name="cornerRadius">@dimen/radius_small_10</item>
    </style>


<!--    TextView Style-->
    <style name="Text" parent="Widget.AppCompat.TextView"/>

    <style name="Heading_14" parent="Text">
        <item name="android:textSize">@dimen/text_medium_14</item>
    </style>

    <style name="Heading_12" parent="Text">
        <item name="android:textSize">@dimen/text_small_12</item>
    </style>

    <style name="Heading_14_400" parent="Heading_14">
        <item name="android:fontFamily">@font/roboto_regular_400</item>
    </style>

    <style name="Heading_12_400" parent="Heading_12">
        <item name="android:fontFamily">@font/roboto_regular_400</item>
    </style>

    <style name="Heading_14_700" parent="Text">
        <item name="android:textSize">@dimen/text_medium_extra_16</item>
        <item name="android:fontFamily">@font/roboto_bold_700</item>
    </style>

    <style name="TextErrorList" parent="Text">
        <item name="fontFamily">@font/roboto_medium_500</item>
        <item name="android:textSize">@dimen/text_large_18</item>
        <item name="android:text">@string/wrong_internet</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Heading_14_500" parent="Heading_14">
        <item name="android:fontFamily">@font/roboto_medium_500</item>
    </style>



    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
    </style>


    <style name="VideoDurationTime" parent="Heading_14_500">
        <item name="android:background">@drawable/video_duration_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>